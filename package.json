{
    "name": "legato-plugin",
    "displayName": "Legato",
    "description": "Legato plugin for Visual Studio Code",
    "version": "0.0.0",
    "publisher": "SWIR",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "leaf.openShell",
                "title": "Leaf: Open Shell"
            },
            {
                "command": "leaf.switchProfile",
                "title": "Leaf: Switch to Another Profile"
            },
            {
                "command": "legato.pickSdef",
                "title": "Legato: Select active SDEF"
            }
        ],
        "languages": [
            {
                "id": "api",
                "aliases": [
                    "Legato API",
                    "api"
                ],
                "extensions": [
                    ".api"
                ],
                "configuration": "./legato-language-config.json"
            },
            {
                "id": "cdef",
                "aliases": [
                    "Legato Component Definition",
                    "cdef"
                ],
                "extensions": [
                    ".cdef",
                    ".cinc"
                ],
                "configuration": "./legato-language-config.json"
            },
            {
                "id": "adef",
                "aliases": [
                    "Legato App Definition",
                    "adef"
                ],
                "extensions": [
                    ".adef",
                    ".ainc"
                ],
                "configuration": "./legato-language-config.json"
            },
            {
                "id": "mdef",
                "aliases": [
                    "Legato Module Definition",
                    "mdef"
                ],
                "extensions": [
                    ".mdef",
                    ".minc"
                ],
                "configuration": "./legato-language-config.json"
            },
            {
                "id": "sdef",
                "aliases": [
                    "Legato System Definition",
                    "sdef"
                ],
                "extensions": [
                    ".sdef",
                    ".sinc"
                ],
                "configuration": "./legato-language-config.json"
            }
        ],
        "grammars": [
            {
                "language": "api",
                "scopeName": "source.api",
                "path": "./syntaxes/api.tmLanguage.json"
            },
            {
                "language": "cdef",
                "scopeName": "source.xdef.cdef",
                "path": "./syntaxes/cdef.tmLanguage.json"
            },
            {
                "language": "adef",
                "scopeName": "source.xdef.adef",
                "path": "./syntaxes/adef.tmLanguage.json"
            },
            {
                "language": "sdef",
                "scopeName": "source.xdef.sdef",
                "path": "./syntaxes/sdef.tmLanguage.json"
            },
            {
                "language": "mdef",
                "scopeName": "source.xdef.mdef",
                "path": "./syntaxes/mdef.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "api",
                "path": "./snippets/api.json"
            },
            {
                "language": "cdef",
                "path": "./snippets/cdef.json"
            },
            {
                "language": "adef",
                "path": "./snippets/adef.json"
            },
            {
                "language": "sdef",
                "path": "./snippets/sdef.json"
            },
            {
                "language": "c",
                "path": "./snippets/c.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "Legato",
                "required": [
                    "mktool"
                ],
                "properties": {
                    "mktool": {
                        "type": "string",
                        "description": "The Legato (mktools) task to customize"
                    }
                }
            }
        ],
        "problemMatchers": [
            {
                "name": "legato",
                "owner": "legato",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        ]
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42",
        "dotenv": "^6.1.0",
        "@types/dotenv": "^4.0.3"
    }
}