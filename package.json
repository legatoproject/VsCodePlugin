{
    "name": "legato-plugin",
    "displayName": "Legato",
    "description": "Legato plugin for Visual Studio Code",
    "version": "0.0.0",
    "publisher": "SWIR",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "leaf-vc",
                    "title": "Leaf",
                    "icon": "resources/activity-bar-icon.svg"
                }
            ]
        },
        "views": {
            "leaf-vc": [
                {
                    "id": "leaf-v-pkg",
                    "name": "Packages"
                },
                {
                    "id": "leaf-v-rmt",
                    "name": "Remotes"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "leaf-cmd-pkg-refresh",
                    "when": "view == leaf-v-pkg",
                    "group": "navigation"
                },
                {
                    "command": "leaf-cmd-rmt-refresh",
                    "when": "view == leaf-v-rmt",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "leaf-cmd-pkg-addtoprofile",
                    "when": "view == leaf-v-pkg && viewItem =~ /leaf-vi-pkg-.*/",
                    "group": "inline"
                },
                {
                    "command": "leaf-cmd-rmt-enable",
                    "when": "view == leaf-v-rmt && viewItem == leaf-vi-rmt-disabled",
                    "group": "inline"
                },
                {
                    "command": "leaf-cmd-rmt-disable",
                    "when": "view == leaf-v-rmt && viewItem == leaf-vi-rmt-enabled",
                    "group": "inline"
                }
            ]
        },
        "commands": [
            {
                "command": "leaf-cmd-trm-openleaf",
                "title": "Leaf: Open Shell"
            },
            {
                "command": "leaf-cmd-prf-switch",
                "title": "Leaf: Switch to Another Profile"
            },
            {
                "command": "leaf-cmd-pkg-refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/refresh.svg",
                    "dark": "resources/refresh.svg"
                }
            },
            {
                "command": "leaf-cmd-pkg-addtoprofile",
                "title": "add to profile..."
            },
            {
                "command": "leaf-cmd-rmt-refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/refresh.svg",
                    "dark": "resources/refresh.svg"
                }
            },
            {
                "command": "leaf-cmd-rmt-enable",
                "title": "enable"
            },
            {
                "command": "leaf-cmd-rmt-disable",
                "title": "disable"
            },
            {
                "command": "legato.pickDefFile",
                "title": "Legato: Select active definition file"
            }
        ],
        "languages": [
            {
                "id": "api",
                "aliases": [
                    "Legato API",
                    "api"
                ],
                "extensions": [
                    ".api"
                ],
                "configuration": "./legato-language-config.json"
            },
            {
                "id": "cdef",
                "aliases": [
                    "Legato Component Definition",
                    "cdef"
                ],
                "extensions": [
                    ".cdef",
                    ".cinc"
                ],
                "configuration": "./legato-language-config.json"
            },
            {
                "id": "adef",
                "aliases": [
                    "Legato App Definition",
                    "adef"
                ],
                "extensions": [
                    ".adef",
                    ".ainc"
                ],
                "configuration": "./legato-language-config.json"
            },
            {
                "id": "mdef",
                "aliases": [
                    "Legato Module Definition",
                    "mdef"
                ],
                "extensions": [
                    ".mdef",
                    ".minc"
                ],
                "configuration": "./legato-language-config.json"
            },
            {
                "id": "sdef",
                "aliases": [
                    "Legato System Definition",
                    "sdef"
                ],
                "extensions": [
                    ".sdef",
                    ".sinc"
                ],
                "configuration": "./legato-language-config.json"
            }
        ],
        "grammars": [
            {
                "language": "api",
                "scopeName": "source.api",
                "path": "./syntaxes/api.tmLanguage.json"
            },
            {
                "language": "cdef",
                "scopeName": "source.xdef.cdef",
                "path": "./syntaxes/cdef.tmLanguage.json"
            },
            {
                "language": "adef",
                "scopeName": "source.xdef.adef",
                "path": "./syntaxes/adef.tmLanguage.json"
            },
            {
                "language": "sdef",
                "scopeName": "source.xdef.sdef",
                "path": "./syntaxes/sdef.tmLanguage.json"
            },
            {
                "language": "mdef",
                "scopeName": "source.xdef.mdef",
                "path": "./syntaxes/mdef.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "api",
                "path": "./snippets/api.json"
            },
            {
                "language": "cdef",
                "path": "./snippets/cdef.json"
            },
            {
                "language": "adef",
                "path": "./snippets/adef.json"
            },
            {
                "language": "sdef",
                "path": "./snippets/sdef.json"
            },
            {
                "language": "c",
                "path": "./snippets/c.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "Legato"
            },
            {
                "type": "Leaf",
                "required": [
                    "taskId"
                ],
                "properties": {
                    "cmd": {
                        "type": "string",
                        "description": "The id of the command to sent to leaf shell"
                    }
                }
            }
        ],
        "problemMatchers": [
            {
                "name": "legato",
                "owner": "legato",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        ]
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42",
        "dotenv": "^6.1.0",
        "@types/dotenv": "^4.0.3"
    }
}