{
    "name": "legato-plugin",
    "displayName": "Legato",
    "description": "Legato plugin for Visual Studio Code",
    "version": "0.0.0",
    "publisher": "SWIR",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "leaf.openShell",
                "title": "Leaf: Open Shell"
            },
            {
                "command": "leaf.switchProfile",
                "title": "Leaf: Switch to Another Profile"
            }
        ]
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42",
        "dotenv": "^6.1.0",
        "@types/dotenv": "^4.0.3"
    }
}